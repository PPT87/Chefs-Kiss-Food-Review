<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/show.css">
<%- include('../partials/nav') %>

<main>
  <br>
  <h1><%= title %> </h1>
  <table class="detailsTbl">
    <thead>      
      <tr>
        <th>Name</th>
        <th>Restaurant</th>
        <th>Location</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody class="tbl-body"> 
        <tr class="info-row">       
          <td><%= food.food %> </td>
          <td><%= food.restaurant %> </td>
          <td><%= food.location %> </td>
          <td><%= food.rating %> </td>
          <td>   
            <% if (food.owner.equals(user?.profile._id)) { %>
              <form action="/foods/<%= food._id %>/edit" method="GET">
                <button id="editFood"><i class="fas fa-edit" type="submit"></i></button>
              </form>   
              <% } %>
          </td>
        </tr>            
    </tbody>
  </table>  

    <table class="reviewTbl">
      <thead>
        <tr>
          <th>Date</th>
          <th>Reviews</th>
          <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        <% food.reviews.forEach(function(review){ %>        
          <tr class="review-row">
            <td><%= review.createdAt.toLocaleDateString() %> </td>
            <td><%= review.content %></td>
            <td><%= review.rating %> </td>
          </tr>
        <% }) %>          
      </tbody>
    </table><br><br>

    <div class="form-body">

    <% if (food.owner.equals(user?.profile._id)) { %>
      <div class="form-group">
    <form id="add-review-form" action="/foods/<%= food._id %>/reviews" method="POST"> 
    <label for="label-title">Rating:</label>
    <select type="text" name="rating" id="rating-input" class="form-input">
      <option value="⭐️">⭐️</option>
      <option value="⭐️⭐️">⭐️⭐️</option>
      <option value="⭐️⭐️⭐️" selected>⭐️⭐️⭐️</option>
      <option value="⭐️⭐️⭐️⭐️">⭐️⭐️⭐️⭐️</option>
      <option value="⭐️⭐️⭐️⭐️⭐️">⭐️⭐️⭐️⭐️⭐️</option>
    </select><br><br>
  </div>

<div class="form-group">
  <label for="content" class="label-title">Review:</label>
  <textarea name="content" id="review-input" class="form-input" rows="4" cols="50" style="height:auto"></textarea>
</div>
    
<button type="submit" class="btn">Add Review</button>
  </div>
  </form>
  <% } %> 
</main>

<%- include('../partials/footer') %>